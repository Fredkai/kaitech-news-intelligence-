# KaiTech Voice of Time - Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
HTTP_PORT=8080
HTTPS_PORT=8443
NODE_ENV=development

# Grok AI API (for news enhancement)
GROK_API_KEY=your-grok-api-key-here

# Session Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Google OAuth Configuration
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth Configuration  
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Database Configuration (SQLite is used by default)
# No additional database config needed for SQLite

# =============================================
# NEWS API INTEGRATIONS (IMPORTANT)
# =============================================

# NewsAPI - https://newsapi.org/ (Primary news source)
# Sign up for free API key to get real-time news from 80,000+ sources
NEWSAPI_KEY=your_newsapi_key_here

# Alternative News API Services (optional fallbacks)
CURRENTS_API_KEY=your_currents_api_key_here
NEWSDATA_API_KEY=your_newsdata_api_key_here
GNEWS_API_KEY=your_gnews_api_key_here

# =============================================
# AI & CONTENT ANALYSIS
# =============================================

# OpenAI API for advanced content analysis (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face for NLP tasks (optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================
# GEOLOCATION SERVICES (for location-based news)
# =============================================

# IPStack API for enhanced geolocation (optional)
IPSTACK_API_KEY=your_ipstack_api_key_here

# MaxMind GeoIP2 for accurate location data (optional)
MAXMIND_USER_ID=your_maxmind_user_id_here
MAXMIND_LICENSE_KEY=your_maxmind_license_key_here

# =============================================
# PERFORMANCE & CACHING
# =============================================

# Redis for advanced caching (optional)
REDIS_URL=redis://localhost:6379

# Cache duration in milliseconds (default: 5 minutes)
CACHE_DURATION=300000

# =============================================
# SECURITY & MONITORING
# =============================================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sentry for error monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================
# DEVELOPMENT & DEBUG
# =============================================

# Enable debug logging
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable API request logging
LOG_API_REQUESTS=true

# =============================================
# EMAIL INTEGRATION CONFIGURATION
# =============================================

# Email server port (separate from main server)
EMAIL_SERVER_PORT=3001

# SMTP Settings (Gmail example - adjust for your email provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Email credentials - IMPORTANT: Use App Password for Gmail, not your regular password
# To setup Gmail App Password:
# 1. Enable 2-Factor Authentication on Gmail
# 2. Go to Google Account Settings > Security > 2-Step Verification
# 3. Generate "App Password" for this application
# 4. Use the generated app password here (format: abcd efgh ijkl mnop)
EMAIL_USER=kaitarefred123@gmail.com
EMAIL_PASS=your_email_app_password_here
EMAIL_APP_PASSWORD=your_email_app_password_here

# Where to send different types of consultation requests
CLOUD_EMAIL=kaitarefred123@gmail.com
DESIGN_EMAIL=kaitarefred123@gmail.com
AI_EMAIL=kaitarefred123@gmail.com

# General notification email (will be CC'd on all requests)
NOTIFICATION_EMAIL=kaitarefred123@gmail.com

# CORS allowed origins for email server (comma-separated for multiple domains)
EMAIL_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500

# Email rate limiting (requests per window)
EMAIL_RATE_LIMIT_WINDOW_MS=900000
EMAIL_RATE_LIMIT_MAX_REQUESTS=10
