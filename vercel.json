{
  "version": 2,
  "name": "kaitech-voice-of-time-ai",
  "builds": [
    {
      "src": "server-with-auth.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server-with-auth.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/server-with-auth.js"
    },
    {
      "src": "/dashboard",
      "dest": "/server-with-auth.js"
    },
    {
      "src": "/login",
      "dest": "/server-with-auth.js"
    },
    {
      "src": "/register",
      "dest": "/server-with-auth.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server-with-auth.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "GROK_API_KEY": "@grok_api_key",
    "NEWSAPI_KEY": "@newsapi_key",
    "OPENAI_API_KEY": "@openai_api_key"
  },
  "functions": {
    "server-with-auth.js": {
      "maxDuration": 30
    }
  }
}
